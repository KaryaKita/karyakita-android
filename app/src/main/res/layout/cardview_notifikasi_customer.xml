<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/view2"
            android:layout_width="7dp"
            android:layout_height="98dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/yellow_900"
            tools:background="@drawable/rounded_border" />

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_judul_notifikasi"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Terima Pesanan Designer Beny"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_informasi"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginLeft="5dp"

                android:text="Beny menerima pesanan anda. Klik untuk melanjutkan ke pembayaran" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_icon_notifikasi"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_notifications_black_24dp" />

                <TextView
                    android:id="@+id/tv_tanggal_notifikasi"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:text="Minggu, 21 Oktober 2018, 09.00 WIB"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="wrap_content"
            android:layout_height="89dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dimens_8dp"
            app:srcCompat="@drawable/desainer" />
    </LinearLayout>

</android.support.v7.widget.CardView>