<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karyakita.karyakita_android_new.customer.home.HomeCustomerActivity"
    android:background="@color/font_white_primary"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@drawable/gradientbackground"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_user"
                android:layout_marginTop="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_logo_karyakita"/>
            <TextView
                android:id="@+id/tv_email"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:text="Apakah anda belum mempunyai akun ?"
                android:textColor="@color/white"/>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="275dp"
            android:elevation="0sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_choose_login"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_login_button"
                        android:text="Login"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_choose_register"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:text="Register"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/mainColor"
                        android:background="@drawable/border_orange"
                        android:textSize="20sp"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="450dp"
            android:textSize="25dp"
            android:textColor="#207bca"
            android:text="@string/back"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="500dp"
            android:textColor="#9f9f9f"
            android:text="@string/copyright"/>
    </RelativeLayout>

</LinearLayout>